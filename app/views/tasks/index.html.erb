<h1>Tasks</h1>
<div id="tasks">
  <% @tasks.each do |task| %>
    <p>
      <strong>Task:</strong>
      <%= link_to task.title, task %>
    </p>
    <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Assign_to:</strong>
    <%= User.find(task.assign_to).name %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= task.status %>
  </p>  

  <p>
    <strong>Timer:</strong>
    <% if task.timer.nil?  %>
        <strong>NA</strong>
    <% else  %> 
      <%= link_to task.timer.time_in_minute, timer_path(task.timer) %>
    <% end %>
  </p>
    <hr>
  <% end %>
</div>


<% if current_user.type == "Administrator"  %>
        <%= link_to "New task", new_task_path %> 
    <% end %>