<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <p>
      <strong>Task:</strong>
      <%= link_to task.title, task %>
    </p>
    <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Assign_to:</strong>
    <%= task.assign_to %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= task.status %>
  </p>  
    <hr>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
