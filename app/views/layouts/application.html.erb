<!DOCTYPE html>
<html>
  <head>
    <title>Task Tracker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <div style="background-color: #007BFF; padding: 2px;">
      <ul id="menu">
      
        <li style="font-size: 40px;"><strong> <%= link_to 'Task Tracker', root_path, class: 'custom-link' %> </strong></li>
        <li style=" margin-left: 35%;"><% if user_signed_in? %>
            User: <strong> <%= current_user.name %>. </strong>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <%= link_to 'Sign out', destroy_user_session_path, class: 'custom-link' %><% end %> 
        </li>
      </ul>
    </div>

    <strong><center>
    <% if notice %> <p class="alert alert-success" style="color: green"><%= notice %></p> <% end %>
    <% if alert %> <p class="alert alert-danger"><%= alert %></p> <% end %>
    </center><strong>
    <%= yield %>
    <br> <br>
    <div style="background-color: #007BFF; padding: 10px; text-align: center;">
      <p style="color: #fff; font-size: 14px; margin: 0;">&copy; 2023 Task Tracker</p>
    </div>



<script>
    document.addEventListener('DOMContentLoaded', function () {
    const numStars = 50; // Adjust the number of stars as needed
    const body = document.body;

    for (let i = 0; i < numStars; i++) {
      const star = document.createElement('div');
      star.className = 'star';
      star.style.left = `${Math.random() * 100}%`;
      star.style.top = `${Math.random() * 100}%`;
      body.appendChild(star);
    }
    });
</script>

  </body>
</html>
